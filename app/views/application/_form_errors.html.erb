<% if object.errors.any? %>
  <div class="panel panel-danger form-errors">
    <div class="panel-heading">
      <h3 class="panel-title"><%= pluralize(object.errors.count, "error") %> prevented this <%= object.class.name.downcase %> from being saved</h3>
    </div>
    <div class="panel-body">
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
