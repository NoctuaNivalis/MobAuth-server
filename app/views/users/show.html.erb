
<div class="row">
  <div class="col-sm-12">
    <div class="page-header">
      <h1>Profile page</h1>
    </div>

    <div class="container-fluid well">
      <div class="row">
	      <div class="col-sm-4" >
			    <%= gravatar_for @user %>
	      </div>
	      
	      <div class="col-sm-8">
          <dl class="dl-horizontal">
            <dt></dt><dd><h3><%= @user.name %></h3></dd>
	          <dt>Email</dt><dd><%= @user.email %></dd>
	          <dt>Registry Number</dt><dd><%= @user.registry_number %></dd>
            <dt>Created at</dt><dd><%= @user.created_at %></dd>
          </dl>
	      </div>
	    </div>
	</div>
  </div>
</div>
